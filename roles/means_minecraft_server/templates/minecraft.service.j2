[Unit]
Description=Minecraft Server
After=network-online.target

[Service]
WorkingDirectory={{ minecraft_user_home.stdout }}/minecraft_server/
Type=simple
ExecStart=/usr/bin/java -Xmx{{ minecraft_max_mem }}M -Xms{{ minecraft_initial_mem }}M -jar minecraft_server.1.15.2.jar nogui
Restart=always
RestartSec=30
KillSignal=SIGINT
SuccessExitStatus=130
NoNewPrivileges=true
PrivateTmp=true
ProtectHome=true
ProtectSystem=full

[Install]
WantedBy=default.target
