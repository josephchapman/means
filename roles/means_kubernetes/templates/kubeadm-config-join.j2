apiVersion: kubeadm.k8s.io/v1beta3
discovery:
  bootstrapToken:
    apiServerEndpoint: {{ kubernetes_api_server_endpoint.stdout }}
    token: {{ kubernetes_token.stdout }}
    caCertHashes:
    - {{ kubernetes_ca_cert_hash.stdout }}
kind: JoinConfiguration
nodeRegistration:
  kubeletExtraArgs:
    node-ip: {{ kubernetes_node_ip }}
